<div class="row justify-content-center" id="item-basic-details">
  <input type="hidden" name="id" value="{{item.id}}">
  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text" id="edit-tag-number">tag:</span>
      <input type="text" name="tag_number" class="form-control" placeholder="######" value="{{item.tag_number}}" aria-label="######" aria-describedby="edit-tag-number" inputmode="numeric"> 
    </div>
  </div>

  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text" id="edit-gender">gender:</span>
      <select name="gender" class="form-select" aria-label="Select gender">
        {{#if (isForMen item.gender)}}
          <option value="women">Female</option>
          <option value="men" selected>Male</option>
        {{else}}
          <option value="women" selected>Female</option>
          <option value="men">Male</option>
        {{/if}}
      </select>
    </div>
  </div>

  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text" id="edit-size">size:</span>
      <input type="text" name="size" class="form-control" value="{{item.size}}" aria-label="edit-size" aria-describedby="edit-size">
    </div>
  </div>

  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text" id="edit-brand">brand:</span>
      <input class="form-control" name="brand" list="brandOptions" value="{{item.brand}}">
      <datalist id="brandOptions">
        {{#each brands as |brand|}}
        <option value="{{brand}}">
        {{/each}}
      </datalist>
    </div>
  </div>

  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text" id="edit-colors">colors:</span>
      <input type="text" class="form-control" name="colors" placeholder="color1, color2, color3" value="{{item.colors}}" aria-label="edit-colors" aria-describedby="edit-colors">
    </div>
  </div>

  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text" id="edit-type">type:</span>
      <input class="form-control" name="type" list="typeOptions" value="{{item.type}}">
      <datalist id="typeOptions">
        {{#each types as |type|}}
        <option value="{{type}}">
        {{/each}}
      </datalist>
    </div>
  </div>

</div>