<div class="row justify-content-center" id="item-price-details" style="display: none">
  
  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text" id="receipt">Receipt #:</span>
      <input type="text" class="form-control" name="receipt_id" value="{{item.receipt_id}}" aria-label="##" aria-describedby="receipt" inputmode="numeric">
    </div>
  </div>

  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text" id="edit-purchase-price">Purchased Price:</span>
      <input type="text" class="form-control" name="purchase_price" value="${{item.purchase_price}}" aria-label="$" aria-describedby="edit-purchase-price" inputmode="numeric">
    </div>
  </div>

  <div class="col-4">
    <div class="input-group">
      <span class="input-group-text" id="tax-percent">Tax:</span>
      <input type="text" class="form-control" value="{{item.tax_percent}}%" aria-label="%" aria-describedby="tax-percent" disabled>
    </div>
  </div>
  <div class="col-5">
    <div class="input-group">
      <span class="input-group-text" id="tax-amount">Tax Total:</span>
      <input type="text" class="form-control" value="${{item.tax_amount}}" aria-label="%" aria-describedby="tax-amount" disabled>
    </div>
  </div>

  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text" id="total-price">Total Price:</span>
      <input type="text" class="form-control" value="${{item.total_price}}" aria-label="$" aria-describedby="total-price" disabled>
    </div>
  </div>

  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text" id="purchase-date">Purchase Date:</span>
      <input type="text" class="form-control" value="{{item.purchase_date}}" aria-label="##/##/####" aria-describedby="purchase-date" disabled>
    </div>
  </div>

  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text" id="shipping-cost">Shipping Cost:</span>
      <input type="text" class="form-control" name="shipping_cost" value="${{item.shipping_cost}}" aria-label="$" aria-describedby="shipping-cost" inputmode="numeric">
    </div>
  </div>

  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text">Sold Price (USD):</span>
      <input type="text" id="sold-price-usd" class="form-control" name="sold_price" value="${{item.sold_price}}" aria-label="$" aria-describedby="sold-price-usd" inputmode="numeric">
    </div>
  </div>

  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text">Sold Price (UAH):</span>
      <input type="text" id="sold-price-uah" class="form-control" value="&#8372;{{item.sold_price_uah}}" aria-label="&#8372;" aria-describedby="sold-price-uah" inputmode="numeric">
    </div>
  </div>

  <div class="col-9">
    <div class="input-group">
      <span class="input-group-text">Sold Date:</span>
      <input type="date" id="sold-date" class="form-control" name="date_sold" value="{{item.date_sold}}" aria-label="##/##/####" aria-describedby="sold-date">
    </div>
  </div>

</div>