<div class="row justify-content-center">
  <div class="col">
    <h1>Create Package</h1>
    <form action="/packages/add" method="post" enctype="multipart/form-data">

      <div class="col-9">
        <div class="input-group">
          <span class="input-group-text" id="package-name">Package Name</span>
          <input type="text" name="package_name" class="form-control required"  aria-describedby="package-name"> 
        </div>
      </div>

      <div class="col-9">
        <div class="input-group">
          <span class="input-group-text" id="package-price">Price:</span>
          <input type="text" class="form-control required" name="price" aria-label="$" aria-describedby="package-price" inputmode="decimal">
        </div>
      </div>

      <div class="col-9">
        <div class="input-group">
          <span class="input-group-text" id="tracking-number">Tracking Number</span>
          <input type="text" name="tracking_number" class="form-control"  aria-describedby="tracking-number"> 
        </div>
      </div>

      <div class="col-9">
        <div class="input-group">
          <span class="input-group-text" id="date-sent">Date Sent</span>
          <input type="date" name="date_sent" class="form-control"  aria-describedby="date-sent"> 
        </div>
      </div>

      <div class="row">
        <div class="col offset-2">
          <button type="submit" class="btn btn-primary px-5 py-3 submit">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="row mt-3" id="item-container"></div>