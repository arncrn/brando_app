<div class="row justify-content-center">
  <div class="col">
    <h1>Create Receipt</h1>
    <form action="/receipts/add" method="post" enctype="multipart/form-data">

      <div class="col-9">
        <div class="input-group">
          <span class="input-group-text" id="store">Store</span>
          <input type="text" name="store" class="form-control required"  aria-describedby="store"> 
        </div>
      </div>

      <div class="col-9">
        <div class="input-group">
          <span class="input-group-text" id="tax">Tax:</span>
          <input type="text" class="form-control required" name="tax" aria-describedby="tax" inputmode="decimal">
        </div>
      </div>

      <div class="col-9">
        <div class="input-group">
          <span class="input-group-text" id="purchase_date">Purchase Date</span>
          <input type="date" name="purchase_date" class="form-control"  aria-describedby="purchase_date"> 
        </div>
      </div>

      <div class="row">
        <div class="col offset-2">
          <button type="submit" class="btn btn-primary px-5 py-3 submit">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>