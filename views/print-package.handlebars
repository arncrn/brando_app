<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Brandomania express</title>
  <link href="/bootstrap/bootstrap.min.css" rel="stylesheet">
  <link href="/stylesheets/style.css" rel="stylesheet">
</head>
<body>
  <div class="container-sm">
    <div class="row">
      <div class="col">
        <h1>Package: {{pkg.package_name}}</h1>
        <h3>Tracking Number: {{pkg.tracking_number}}</h1>
        <h3>Shipping Cost: ${{pkg.price}} => ${{pricePerItem}}/item</h3>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Brand</th>
              <th scope="col">Type</th>
              <th scope="col">Size</th>
              <th scope="col">Colors</th>
              <th scope="col">Tag Number</th>
              <th scope="col">Purchase Price</th>
              <th scope="col">Extra Details</th>
            </tr>
          </thead>
          <tbody>
            {{#each items as |_ idx|}}
              <tr>
                <th>{{increaseByOne idx}}</th>
                <td>{{brand}}</td>
                <td>{{type}}</td>
                <td>{{size}}</td>
                <td>{{colors}}</td>
                <td>{{tag_number}}</td>
                <td>${{total_price}}</td>
                <td><pre>{{extra_info}}</pre></td>
              </tr>
            {{/each}}
            <tr>
              <th>Total:</th>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td>$<strong>{{sumOfItems}}</strong></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div class="row">
  </div>
  
  <script src="/js/jquery-3.5.1.min.js"></script>
  <script src="/bootstrap/bootstrap.bundle.min.js"></script>
</body>
</html>




  